<Window x:Class="PathGeometriesDemo1.CommonGeormetriesDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="通用几何图形示例" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Path Stroke="Black" StrokeThickness="1" Grid.Row="0" >
            <Path.Data>                
                <!--绘制直线-->
                <LineGeometry StartPoint="10,20" EndPoint="100,20" />
            </Path.Data>
        </Path>
        <Path Stroke="Black" StrokeThickness="1" Grid.Row="1" >
            <Path.Data>
                <!--绘制矩形-->
                <RectangleGeometry Rect="10,0 100,50"></RectangleGeometry>
            </Path.Data>
        </Path>
        <Path Stroke="Black" StrokeThickness="1" Grid.Row="2" >
            <Path.Data>
                <!--绘制椭圆-->
               <EllipseGeometry RadiusX="50" RadiusY="25" Center="50,25"></EllipseGeometry>
            </Path.Data>
        </Path>
    </Grid>
</Window>
