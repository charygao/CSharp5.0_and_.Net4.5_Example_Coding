<Window x:Class="DockPanelDemo.Window2"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="DockPanel演示" Height="300" Width="300">
    <DockPanel LastChildFill="True">
        <Button DockPanel.Dock="Top">顶部按钮</Button>
        <Button DockPanel.Dock="Top" HorizontalAlignment="Center">
            居中效果的顶部按钮</Button>
        <Button DockPanel.Dock="Top" HorizontalAlignment="Right">
            右对齐的顶部按钮</Button>
        <Button DockPanel.Dock="Bottom">底部按钮</Button>
        <Button DockPanel.Dock="Left">左侧按钮</Button>
        <Button DockPanel.Dock="Right">右边按钮</Button>
        <Button>剩余空间</Button>
    </DockPanel>
</Window>
