<StackPanel
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:sys="clr-namespace:System;assembly=mscorlib"
  Name="root"
>
    <StackPanel.Resources>
        <Style TargetType="{x:Type Button}">
            <Setter Property="Height" Value="20"/>
            <Setter Property="Width" Value="250"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>
    </StackPanel.Resources>
    <TextBlock Name="text1">点击下面的按钮将会产生行为</TextBlock>
    <Button Name="b1" >单击本按钮将弹出一个免费的框框</Button>

    <ListBox>
        <ListBoxItem>
            <sys:DateTime>10/13/2012 4:30 PM</sys:DateTime>
        </ListBoxItem>
        <ListBoxItem>
            <sys:DateTime>10/29/2012 12:30 PM</sys:DateTime>
        </ListBoxItem>
        <ListBoxItem>
            <sys:DateTime>10/30/2012 2:30 PM</sys:DateTime>
        </ListBoxItem>
    </ListBox>
</StackPanel>

