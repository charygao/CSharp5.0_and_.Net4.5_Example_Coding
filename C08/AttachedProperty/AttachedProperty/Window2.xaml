<Window x:Class="AttachedProperty.Window2"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Window2" Height="300" Width="500">
    <!--先将Window的Height和Width设置为200和500设备无关单位（1/96英寸）-->
    <Grid Background="Beige">
        <!--定义一个三行三列的网格-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <!--在网格的每行每列中分别放置一个文本块-->
        <TextBlock Name="txtBookName" HorizontalAlignment="Right">书名:</TextBlock>
        <TextBlock Name="txtName">学习Windows Presentation Foundation</TextBlock>
        <TextBlock Name="txtCategory" HorizontalAlignment="Right">类型:</TextBlock>
        <TextBlock Name="txtCategory2">.NET Framework 3.5 中文原创书籍</TextBlock>
        <TextBlock Name="txtContent" HorizontalAlignment="Right">内容简介:</TextBlock>
        <TextBlock Name="txtContent2">从基础到应用，全面覆盖WPF应用</TextBlock>
    </Grid>

</Window>
