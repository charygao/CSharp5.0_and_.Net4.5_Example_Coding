<Window x:Class="OtherNamespace.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    Title="Window1" Height="200" Width="300">
    <StackPanel Name="root">
        <TextBlock Name="text1">显示使用自定义命名空间中的类型</TextBlock>
        <!--ListBox控件用于显示列表信息，在这里显示一些日期信息，引用了System命名空间中的DateTime类型-->
        <ListBox>
            <ListBoxItem>
                <sys:DateTime>2013-03-18</sys:DateTime>
            </ListBoxItem>
            <ListBoxItem>
                <sys:DateTime>2013-03-20</sys:DateTime>
            </ListBoxItem>
            <ListBoxItem>
                <sys:DateTime>2013-03-30 16:40</sys:DateTime>
            </ListBoxItem>
        </ListBox>
    </StackPanel>
</Window>
