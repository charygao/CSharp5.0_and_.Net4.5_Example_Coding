<Window x:Class="TargetTypeStyleDemo.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="使用TargetType设置特定控件的样式" Height="300" Width="300">
    <Window.Resources>
        <!--为Button控件指定样式-->
        <Style TargetType="{x:Type Button}">
            <Setter Property="FontSize" Value="32" />
            <Setter Property="FontWeight" Value="Bold" />
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Button Name="btn1" Content="类型样式"></Button>
    </Grid>
</Window>
