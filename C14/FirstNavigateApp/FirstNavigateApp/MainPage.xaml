<Page x:Class="FirstNavigateApp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="MainPage" WindowTitle="导航示例" ShowsNavigationUI="False">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock Text="点击下面的超级链接导航到另外的页面"></TextBlock>
        <!--在TextBlock中添加一个链接，使之导航到Page2.xaml-->
        <TextBlock VerticalAlignment="Bottom" Grid.Row="1">
            <Hyperlink NavigateUri="Page2.xaml">点击导航到另外的页面</Hyperlink>
        </TextBlock>        
    </Grid>
</Page>
