<Window x:Class="DialogModalDemo.DialogWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="模式对话框窗口" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal" Grid.Row="1">
            <!--默认按钮-->
            <Button Name="btn1" IsDefault="True" Click="btn1_Click">确定</Button>
            <!--IsCancel会自动将DialogResult设置为False-->
            <Button Name="btn2" Margin="20,0,0,0" IsCancel="True">取消</Button>
        </StackPanel>
    </Grid>
</Window>
