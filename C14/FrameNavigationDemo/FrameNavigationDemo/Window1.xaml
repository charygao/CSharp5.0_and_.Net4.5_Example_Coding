<Window x:Class="FrameNavigationDemo.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="导航窗口" Height="300" Width="300">
    <StackPanel Margin="10,10,10,10">
        <!-- 回到主页面的链接按钮-->
        <TextBlock Background="#EEEEFF" FontSize="15" Height="30">
            <Hyperlink Name="homeHyperlink" Click="homeHyperlink_Click">返回首页</Hyperlink>
        </TextBlock>
        <!-- Frame导航区 -->
        <Frame Name="Frame1" Background="AliceBlue" Source="Page1.xaml" NavigationUIVisibility="Visible" />
    </StackPanel>
</Window>
