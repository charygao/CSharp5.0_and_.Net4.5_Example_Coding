<Window x:Class="RectangleDemo.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Window1" Height="300" Width="500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
    <Canvas Width="120" Height="200">
    <!-- 绘制一个高100，高50的矩形，并使用SolidColorBrush进行填充 -->
    <Rectangle Width="100" Height="50" Fill="Blue" Canvas.Left="10" Canvas.Top="25" />
    <!-- 绘制一个蓝色矩形，具有黑色外框，圆角矩形 -->
    <Rectangle Width="100" Height="50" Fill="Blue" Stroke="Black" StrokeThickness="4"
    RadiusX="20" RadiusY="20" Canvas.Left="10" Canvas.Top="100"/>
  </Canvas>
   <Canvas Height="200" Width="200" Grid.Column="1">
  <!-- 绘制一个椭圆，并使用蓝色填充 -->
    <Ellipse Width="100" Height="50" Fill="Blue" Canvas.Left="10" Canvas.Top="25" />
   <!-- 绘制一个椭圆，使用蓝色背景，黑色边框  -->
    <Ellipse Width="100" Height="50" Fill="Blue" Stroke="Black"
    StrokeThickness="4" Canvas.Left="10" Canvas.Top="100"/>
   <!-- 绘制一个蓝色的正圆形，宽和高相等。 -->
    <Ellipse Width="50" Height="50" Fill="Blue" Canvas.Left="135" Canvas.Top="25"/>
   <!-- 绘制一个正圆，蓝色背景，黑色边框 -->
   <Ellipse Width="50" Height="50" Stroke="Black" StrokeThickness="4" Canvas.Left="135" Canvas.Top="100" />
   </Canvas>

    </Grid>
</Window>
