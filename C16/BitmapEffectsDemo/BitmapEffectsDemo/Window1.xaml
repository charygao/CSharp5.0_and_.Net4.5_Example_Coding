<Window x:Class="BitmapEffectsDemo.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="BitmapEffect示例" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Button Name="btn1" Click="btn1_Click" Margin="10">BlurBitmapEffect糊模效果</Button>
        <Button Name="btn2" Click="btn2_Click" Margin="10" Grid.Row="1">BevelBitmapEffect凹凸效果</Button>
        <Button Name="btn3" Click="btn3_Click" Margin="10" Grid.Row="2">EmbossBitmapEffect浮雕效果</Button>
        <Button Name="btn4" Click="btn4_Click" Margin="10" Grid.Row="3">发光和阴影示例</Button>
    </Grid>
</Window>
