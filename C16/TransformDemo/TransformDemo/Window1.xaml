<Window x:Class="TransformDemo.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="变换效果示例" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Button Name="button1" Margin="10" Click="button1_Click">TranslateTransform移动变换示例</Button>
        <Button Name="button2" Margin="10" Click="button2_Click" Grid.Row="1">RotateTransform旋转变换</Button>
        <Button Name="button3" Margin="10" Click="button3_Click" Grid.Row="2">ScaleTransform缩放变换</Button>
        <Button Name="button4" Margin="10" Click="button4_Click"  Grid.Row="3">SkewTransform扭曲变换</Button>
        <Button Name="button5" Margin="10" Click="button5_Click"  Grid.Row="4">TransformGroup组合变换</Button>
    </Grid>
</Window>
