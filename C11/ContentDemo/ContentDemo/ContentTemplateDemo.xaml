<Window x:Class="ContentDemo.ContentTemplateDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="ContentTemplateDemo" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Button Name="button1" HorizontalContentAlignment="Left">
            <Button.ContentTemplate>
                <DataTemplate>
                    <Rectangle Width="100" Height="50" Fill="Blue"></Rectangle>
                </DataTemplate>
            </Button.ContentTemplate>
        </Button>
    </Grid>
</Window>
