<Window x:Class="HeaderedContentControlDemo.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Window1" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Button Name="button1" Click="button1_Click">GroupBox演示</Button>
        <Button Name="button2" Grid.Column="1" Click="button2_Click">TabItem演示</Button>
        <Button Margin="0,0.5,0,0" Name="button3" Grid.Row="1" Click="button3_Click">Expander控件演示</Button>
        <Button Margin="0,0.5,0,0" Name="button4" Grid.Column="1" Grid.Row="1" Click="button4_Click">Expander动态赋内容示例</Button>
    </Grid>
</Window>
