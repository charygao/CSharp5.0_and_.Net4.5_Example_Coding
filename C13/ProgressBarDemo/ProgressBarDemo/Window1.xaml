<Window x:Class="ProgressBarDemo.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="ProgressBar进度条示例" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <!--该ProgressBar将自动进行滚动-->
        <ProgressBar Height="10" Width="200" IsIndeterminate="True"></ProgressBar>
        <StackPanel Grid.Row="1" Margin="10">
            <!--该ProgressBar将使用程序代码进行滚动-->
            <ProgressBar Height="10" Name="prog1" Margin="10"></ProgressBar>
            <Button Content="开始" Width="100" Click="Button_Click" HorizontalAlignment="Right"></Button>
        </StackPanel>
    </Grid>
</Window>
