<Window x:Class="FontFamilyDemo.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="字体示例" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Button FontFamily="幼圆" FontSize="30">字体示例</Button>
        <StackPanel Grid.Row="1" TextBlock.FontSize="20" Background="AliceBlue">
            <TextBlock FontStyle="Normal">Normal font style</TextBlock>
            <TextBlock FontStyle="Italic">Italic font style</TextBlock>
            <TextBlock FontStyle="Oblique">Oblique font style</TextBlock>
        </StackPanel>
        <StackPanel Grid.Row="2" TextBlock.FontSize="20" Background="AliceBlue">
            <TextBlock FontWeight="UltraBold">UltraBold</TextBlock>
            <TextBlock FontWeight="Normal">Normal</TextBlock>
            <TextBlock FontWeight="Light">Light</TextBlock>
        </StackPanel>
        <StackPanel Grid.Row="3" TextBlock.FontSize="20" Background="Aqua">
            <TextBlock FontFamily="宋体,幼圆,默体">替代字体演示</TextBlock>
            <TextBlock FontFamily="file:///d:/MyFonts/#Pericles Light">使用非系统字体</TextBlock>
        </StackPanel>
    </Grid>
</Window>
