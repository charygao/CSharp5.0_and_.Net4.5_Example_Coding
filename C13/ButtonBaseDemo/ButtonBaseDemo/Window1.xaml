<Window x:Class="ButtonBaseDemo.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="ClickMode示例" Height="300" Width="300">
    <StackPanel>
        <!--ClickMode为Hover，鼠标移过时触发事件-->
        <Button Name="btn1" Background="Pink" 
        BorderBrush="Black" BorderThickness="1" 
        Click="OnClick1" ClickMode="Hover">
            ClickMode为Hover,单击查看效果
        </Button>
        <!--ClickMode为Press，鼠标按下时触发单击事件-->
        <Button Name="btn2" Background="LightBlue" 
        BorderBrush="Black" BorderThickness="1" 
        Click="OnClick2" ClickMode="Press">
            ClickMode为Press,单击查看效果
        </Button>
        <!--ClickMode为Release，鼠标移出时触发单击事件-->
        <Button Name="btn3" 
        Click="OnClick3" ClickMode="Release">
            ClickMode为Release,单击查看效果
        </Button>
    </StackPanel>
</Window>
